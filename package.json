{
  "name": "todo-app-node-angular",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "setup": "npm install && cd server && npm install && cd ../client && npm install",
    "dev:server": "cd server && npm start",
    "dev:client": "cd client && npm start",
    "dev": "run-p dev:server dev:client",
    "build-client": "cd client && npm run build && cd ..",
    "update-views": "cp -r client/static/* server/views",
    "run-server": "cd server && node app.js",
    "deploy": "run-s build-client update-views run-server"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
